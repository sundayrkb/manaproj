<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<table style="width:100%" border="1">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Name</th>
      <th>Description</th>
      <th>Team ID</th>
      <!-- <th>Users IDs</th> -->
      <th>Developers Name</th>
      <th>Status</th>
      <th colspan="3">Take Action</th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.id %></td>
        <td><%= project.title %></td>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= project.team_id %></td>
        <!-- <td><%= project.user_ids %> </td> -->
        <td>
         <% @users.find(project.user_ids).each do |ui|%>
         <ul> <%= ui.id %>. <%= ui.name %></ul>
         <%end%>
         </td>

        <td><%= project.status %></td>
        
        <td><%= link_to 'Show', project %></td>
        <% if can? :manage, Project %>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path if can? :manage, Project %>
